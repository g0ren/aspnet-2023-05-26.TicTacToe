@using TicTacToe.HtmlHelpers
@model TicTacToeModel
@{
    ViewData["Title"] = "Tic Tac Toe";
}

@if ((Context.Session.GetInt32("MyPlayer") == 1 && !GameState.ConnectedO)
    || (Context.Session.GetInt32("MyPlayer") == 2 && !GameState.ConnectedX))
{
    <div class="text-center">
        <h1 class="display-4">
            Ждём второго игрока, не забудь перезагрузить страницу!
        </h1>
    </div>
}
else if ((Context.Session.GetInt32("MyPlayer") == 2 && !GameState.ConnectedO)
         || (Context.Session.GetInt32("MyPlayer") == 1 && !GameState.ConnectedX))
{
    <div class="text-center">
        <h1 class="display-4">
            Игра окончена, нажмите "Завершить игру"
        </h1>
    </div>
}
else
{
    <div class="text-center">
        @if (Model.Winner == 1)
        {
            <h1 class="display-4">
                <code>
                    @GameState.NameX
                </code>
                is the winner!
            </h1>
        }
        else if (Model.Winner == 2)
        {
            <h1 class="display-4">
                <code>
                    @GameState.NameO
                </code>
                is the winner!
            </h1>
        }
        else if(Context.Session.GetInt32("MyPlayer") == GameState.WhoseMove)
        {
            <h1 class="display-4">
                Ваш ход,
                <code>
                    @if (Model.WhoseMove == 2)
                    {
                        @GameState.NameO
                    }
                    else
                    {
                        @GameState.NameX
                    }
                </code>
            </h1>
        }
        else
        {
            <h1 class="display-4">
                Пододжди,
                <code>
                    @if (Model.WhoseMove == 2)
                    {
                        @GameState.NameX
                    }
                    else
                    {
                        @GameState.NameO
                    }
                </code>
                , сейчас ход
                <code>
                    @if (Model.WhoseMove == 2)
                    {
                        @GameState.NameO
                    }
                    else
                    {
                        @GameState.NameX
                    }
                </code>
                Не забудь перезагрузить страницу!
            </h1>
        }
    </div>

    <div class="container">
        <table class="field">
            <tr>
                <td class="cell">
                    <code>
                        @if (Model.Field[0] == " ")
                        {
                            @using (Html.BeginForm("GameMove", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("cell", 0)
                                @Html.CellButton(Model.Winner != 0 || Context.Session.GetInt32("MyPlayer") != GameState.WhoseMove)
                            }
                        }
                        else
                        {
                            @Model.Field[0]
                        }
                    </code>
                </td>
                <td class="cell">
                    <code>
                        @if (Model.Field[1] == " ")
                        {
                            @using (Html.BeginForm("GameMove", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("cell", 1)
                                @Html.CellButton(Model.Winner != 0 || Context.Session.GetInt32("MyPlayer") != GameState.WhoseMove)
                            }
                        }
                        else
                        {
                            @Model.Field[1]
                        }
                    </code >
                </td >
                <td class="cell">

                    <code>
                        @if (Model.Field[2] == " ")
                        {
                            @using (Html.BeginForm("GameMove", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("cell", 2)
                                @Html.CellButton(Model.Winner != 0 || Context.Session.GetInt32("MyPlayer") != GameState.WhoseMove)
                            }
                        }
                        else
                        {
                            @Model.Field[2]
                        }
                    </code >
                </td >
            </tr >
            <tr >
                <td class="cell">
                    <code >
                        @if (Model.Field[3] == " ")
                        {
                            @using (Html.BeginForm("GameMove", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("cell", 3)
                                @Html.CellButton(Model.Winner != 0 || Context.Session.GetInt32("MyPlayer") != GameState.WhoseMove)
                            }
                        }
                        else
                        {
                            @Model.Field[3]
                        }
                    </code >
                </td >
                <td class="cell">
                    <code >
                        @if (Model.Field[4] == " ")
                        {
                            @using (Html.BeginForm("GameMove", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("cell", 4)
                                @Html.CellButton(Model.Winner != 0 || Context.Session.GetInt32("MyPlayer") != GameState.WhoseMove)
                            }
                        }
                        else
