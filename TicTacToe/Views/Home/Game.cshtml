                    <code >
                        @if (Model.Field[7] == " ")
                        {
                            @using (Html.BeginForm("GameMove", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("cell", 7)
                                @Html.CellButton(Model.Winner != 0 || Context.Session.GetInt32("MyPlayer") != GameState.WhoseMove)
                            }
                        }
                        else
                        {
                            @Model.Field[7]
                        }
                    </code >
                </td >
                <td class="cell">

                    <code >
                        @if (Model.Field[8] == " ")
                        {
                            @using (Html.BeginForm("GameMove", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("cell", 8)
                                @Html.CellButton(Model.Winner != 0 || Context.Session.GetInt32("MyPlayer") != GameState.WhoseMove)
                            }
                        }
                        else
                        {
                            @Model.Field[8]
                        }
                    </code >
                </td >
            </tr >
        </table >
    </div>
}

@using (Html.BeginForm("Game", "Home", FormMethod.Post))
{
    @Html.SubmitButton("Перезагрузить страницу")
}

